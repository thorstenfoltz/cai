# Maintainer: Thorsten Foltz <thorsten.foltz@live.com>
pkgname=git-cai-cli
pkgver=0.6.2
pkgrel=1
pkgdesc="Use LLM to create git commit messages."
arch=('any')
url="https://github.com/thorstenfoltz/cai"
license=('MIT')
depends=('python' 'python-yaml' 'python-openai' 'python-google-genai' 'python-requests' 'python-typer' 'python-groq' 'python-anthropic' 'git')
makedepends=(python-build python-installer python-setuptools python-wheel)
source=("https://files.pythonhosted.org/packages/e5/b8/9f5ba8beeb9c5afb8e54e752413c85c896fed30e8fbfb1181adaed9d085f/git_cai_cli-0.6.2.tar.gz")
sha256sums=('f764af2f4512ba5347551d0efa68b34e10dd6adac59187c9bbaf346e9d17189b')

build() {
    cd "${srcdir}/git_cai_cli-${pkgver}"
    python -m build --wheel --no-isolation
}

package() {
    cd "${srcdir}/git_cai_cli-${pkgver}"
    python -m installer --destdir="$pkgdir" dist/*.whl
}
 
